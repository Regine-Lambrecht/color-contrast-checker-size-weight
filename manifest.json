{
    "manifest_version": 3,
    "name": "Colour Contrast Checker Pro",
    "version": "1.2",
    "description": "Standardized WCAG contrast checker with side-panel support and progress saving.",
    "permissions": [
        "sidePanel",
        "clipboardWrite",
        "storage"
    ],
    "side_panel": {
        "default_path": "popup.html"
    },
    "action": {
        "default_title": "Open Colour Checker"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
